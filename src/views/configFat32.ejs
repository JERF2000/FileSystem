<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File System: Fat32</title>
    <%- include('partials/head') %>
</head>
<body>

    <%- include('partials/navigation') %>

    <center>
        <h1>Configuración de File System Fat32</h1>

        <div class="container-custom mt-4">
            <form action="procesar_configuracion_fat32.php" method="post">
                <div class="form-fat32">
                    
                    <div class="mb-3">
                        <label for="capacidadTotal" class="form-label">Capacidad Total (GB):</label>
                        <input type="number" class="form-control" id="capacidadTotal" name="capacidadTotal" min="0" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="espacioDisponible" class="form-label">Espacio Disponible (GB):</label>
                        <input type="number" class="form-control" id="espacioDisponible" name="espacioDisponible" min="0" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="tamañoCluster" class="form-label">Tamaño de Cluster (KB):</label>
                        <input type="number" class="form-control" id="tamañoCluster" name="tamañoCluster" min="0" required>
                    </div>

                    <div class="mb-3">
                        <label for="numFat" class="form-label">Número de FATs:</label>
                        <input type="number" class="form-control" id="numFat" name="numFat" min="1" value="2" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="numEntradasDirectorio" class="form-label">Número de Entradas de Directorio:</label>
                        <input type="number" class="form-control" id="numEntradasDirectorio" name="numEntradasDirectorio" min="0" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="soporteLongFileName" class="form-label">Soporte para Long File Name (LFN):</label>
                        <select id="soporteLongFileName" name="soporteLongFileName" class="form-select" required>
                            <option value="si">Sí</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    
                    <div class="text-center">
                        <button type="button" class="btn btn-dark me-2">Guardar Configuración</button>
                    </div>
                </div>
            </form>
        </div>
    </center>

</body>
</html>