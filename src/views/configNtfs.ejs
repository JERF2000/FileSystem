<html lang="en"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File System: NTFS</title>
    <%- include('partials/head') %>
    <script>

        function guardarDatosNtfs(){
        const cluster = document.getElementById('cluster').value;
        const numMFT = document.getElementById('numMFT').value;
        const cifrado = document.getElementById('cifrado').value;
        const compresion = document.getElementById('compresion').value;

        // Enviar los datos de almacenamiento al servidor
        fetch('/guardarDatosNtfs', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    cluster: cluster,
                    numMFT: numMFT,
                    cifrado: cifrado,
                    compresion: compresion
                })
            }).then(response => response.json())
        }

    </script>
</head>
<body>

    <%- include('partials/navigation') %>

    <center>
        <h1>Configuración de File System NTFS</h1>

        <div class="container-custom mt-4">
            <form method="post">
                <div class="form-ntfs">
                    
                    <div class="mb-3">
                        <label for="tamañoCluster" class="form-label">Tamaño de Cluster (KB):</label>
                        <input type="number" class="form-control" id="cluster" name="tamañoCluster" min="0" required>
                    </div>
    
                    <div class="mb-3">
                        <label for="numMFT" class="form-label">Número de Registros en MFT:</label>
                        <input type="number" class="form-control" id="numMFT" name="numMFT" min="0" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="cifrado" class="form-label">Cifrado (Encrypting File System):</label>
                        <select id="cifrado" name="cifrado" class="form-select" required>
                            <option value="si">Sí</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="compresion" class="form-label">Compresión de Archivos:</label>
                        <select id="compresion" name="compresion" class="form-select" required>
                            <option value="si">Sí</option>
                            <option value="no">No</option>
                        </select>
                    </div>
                    
                    <div class="text-center">
                        <a href="./opArchivos">
                            <button type="button" class="btn btn-dark me-2" onclick="guardarDatosNtfs()">Guardar Configuración</button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </center>

</body>
</html>